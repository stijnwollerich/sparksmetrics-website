# Copy to .env and adjust for your environment.

# Flask
FLASK_APP=app
FLASK_DEBUG=1

# Set a random secret in production (e.g. openssl rand -hex 32)
SECRET_KEY=your-secret-key

# PostgreSQL (required for storing lead submissions). If unset, forms still work but leads are not saved.
# Example: postgresql://user:password@localhost:5432/sparksmetrics
DATABASE_URL=

# YouTube video gallery: use one of the two options below.
# Option 1 (recommended): comma-separated video IDs (from any watch URL: youtube.com/watch?v=VIDEO_ID)
YOUTUBE_VIDEO_IDS=
# Option 2: channel ID (starts with UC...) to fetch latest from RSS. Find in YouTube Studio → Settings → Advanced.
YOUTUBE_CHANNEL_ID=
