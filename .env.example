# Copy to .env and adjust for your environment.

# Flask
FLASK_APP=app
FLASK_DEBUG=1

# Set a random secret in production (e.g. openssl rand -hex 32)
SECRET_KEY=your-secret-key

# PostgreSQL (required for storing lead submissions). If unset, forms still work but leads are not saved.
# Example: postgresql://user:password@localhost:5432/sparksmetrics
DATABASE_URL=

# YouTube video gallery: use one of the two options below.
# Option 1 (recommended): comma-separated video IDs (from any watch URL: youtube.com/watch?v=VIDEO_ID)
YOUTUBE_VIDEO_IDS=
# Option 2: channel ID (starts with UC...) to fetch latest from RSS. Find in YouTube Studio → Settings → Advanced.
YOUTUBE_CHANNEL_ID=

# Brevo (email marketing): sync lead form submissions to Brevo. If unset, leads are not sent.
# API key: Brevo → Settings → SMTP & API → API keys → Generate.
BREVO_API_KEY=
# Optional: comma-separated list IDs to add contacts to (e.g. 2,5). Brevo → Contacts → Lists → list ID in URL.
BREVO_LIST_IDS=
# CRO Ebook list ID (default 7): contacts who download the ebook are added to this list.
BREVO_CRO_EBOOK_LIST_ID=7
# Free CRO audit list ID (default 11): contacts who request the audit are added to this list.
BREVO_AUDIT_LIST_ID=11

# Slack: webhook URL for lead notifications (e.g. https://hooks.slack.com/services/...). If set, each lead posts to Slack.
SLACK_WEBHOOK_URL=
